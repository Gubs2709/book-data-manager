rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for user-specific data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for collection group queries used in Data Explorer
    match /{path=**}/textbooks/{textbookId} {
      allow read: if request.auth != null && request.query.where.userId == request.auth.uid;
    }

    match /{path=**}/notebooks/{notebookId} {
      allow read: if request.auth != null && request.query.where.userId == request.auth.uid;
    }
  }
}
