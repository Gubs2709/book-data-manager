
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow list/read/write for authenticated users on textbooks and notebooks.
    // This rule is necessary for the collectionGroup queries in the Data Explorer.
    match /users/{userId}/textbooks/{textbookId} {
      allow read, write: if request.auth != null;
    }

    match /users/{userId}/notebooks/{notebookId} {
      allow read, write: if request.auth != null;
    }

    // Fallback rule for other documents.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
